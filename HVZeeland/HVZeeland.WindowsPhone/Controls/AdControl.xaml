<UserControl
    x:Class="HVZeeland.Controls.AdControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XamlControlLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
    mc:Ignorable="d">
    
    <Grid x:Name="AdGrid" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <UI:AdControl
            x:Name="adControl"
          AutoRefreshIntervalInSeconds="60" 
          ApplicationId="test_client" 
          AdUnitId="Image320_50" 
          HorizontalAlignment="Center" 
          Height="50" Grid.Column="1"
          IsAutoRefreshEnabled="True" 
          
          VerticalAlignment="Top" 
          Width="320"/>
        <TextBlock Text="Sluiten" Foreground="White" FontSize="10" Margin="0,5,0,0" Tapped="TextBlock_Tapped" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        
    </Grid>
</UserControl>
